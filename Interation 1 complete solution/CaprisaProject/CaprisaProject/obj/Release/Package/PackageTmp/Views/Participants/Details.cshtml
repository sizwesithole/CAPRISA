@model CaprisaProject.Models.Participant

@{
    ViewBag.Title = "Details";
}


<div>
    <h4>Participant Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ParticipantCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ParticipantCode)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Site)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Site)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Enrollments)
        </dt>
        <dd>
            <br/>
            <table class="table">
                <tr>
                    <th>Study Involved In</th>
                    <th>Site</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Study.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Site)
                    </td>

                </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ParticipantCode }) |
    @Html.ActionLink("Back to List", "Index")
</p>
